<Window x:Class="ИСИП323_Эрдынеева_Суранзан.ThirdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ИСИП323_Эрдынеева_Суранзан"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Вычисление функций - 15 вариант (графики)" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.ColumnSpan="3" Source="/images/nmath3.png" Height="150"/>
        <StackPanel Grid.Column="3" Grid.Row="0" Orientation="Vertical">
            <Button x:Name="BackButton3"  Content="Back" Height="30" Width="100" FontSize="20" Background="Ivory" Margin="10"/>
            <Button x:Name="ResetButton3" Content="Reset" Height="30" Width="100" FontSize="20" Background="Ivory" Margin="10"/>
            <Button x:Name="CalculateButton3" Content="Calculate" Height="30" Width="100" FontSize="20" Background="Ivory" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBlock Text="X" Margin="10" Height="30" Width="70" TextAlignment="Center" Background="WhiteSmoke" FontSize="20"></TextBlock>
            <TextBox x:Name="xValue3" ToolTip="Введите значение x" Height="30" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBlock Grid.Column="0" Text="Result" Margin="10" Height="30" Width="70" 
               TextAlignment="Center" Background="WhiteSmoke" FontSize="20"></TextBlock>
            <TextBox x:Name="ResultBox3" Grid.Column="1" ToolTip="Здесь отобразятся значения функции на указанном промежутке" Height="160" Width="200" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0, 10, 0, 10"
             FontSize="15"/>
        </StackPanel>
        <oxy:PlotView Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2" x:Name="PlotView" Model="{Binding PlotModel}" Margin="100, 10, 10, 10"/>
    </Grid>
</Window>
